    ],
    "description": "Default erlang module doc"
  }
  ,
  "snippet_gen_server": {
    "prefix": ["snippet_gen_server"],
    "body": [
      "-behaviour(gen_server).",
      "",
      "%% api",
      "-export([start_link/0]).",
      "",
      "%% callbacks",
      "-export([",
      "\tinit/1,",
      "\thandle_call/3,",
      "\thandle_cast/2,",
      "\thandle_info/2,",
      "\tterminate/2",
      "]).",
      "",
      "-include_lib(\"kernel/include/logger.hrl\").",
      "",
      "-record(state, {}).",
      "",
      "%% api",
      "",
      "-spec start_link() -> gen_server:start_ret().",
      "start_link() ->",
      "\tgen_server:start_link({local, ?MODULE}, ?MODULE, [], []).",
      "",
      "",
      "%% callbacks",
      "",
      "init([]) ->",
      "\t{ok, #state{}}.",
      "",
      "",
      "handle_call(Message, _From, State) ->",
      "\t?LOG_WARNING(#{event => unhandled_call, message => Message}),",
      "\t{reply, ok, State}.",
      "",
      "",
      "handle_cast(Message, State) ->",
      "\t?LOG_WARNING(#{event => unhandled_cast, message => Message}),",
      "\t{noreply, State}.",
      "",
      "",
      "handle_info(Message, State) ->",
      "\t?LOG_WARNING(#{event => unhandled_info, message => Message}),",
      "\t{noreply, State}.",
      "",
      "",
      "terminate(Reason, State) ->",
      "\t?LOG_WARNING(#{event => terminated, reason => Reason, state => State}),",
      "\tok."
    ],
    "description": "Minimal gen_server"
  },
  "snippet_supervisor": {
    "prefix": ["snippet_supervisor"],
    "body": [
      "-behaviour(supervisor).",
      "",
      "-export([start_link/0, init/1]).",
      "",
      "",
      "start_link() ->",
      "\tsupervisor:start_link({local, ?MODULE}, ?MODULE, []).",
      "",
      "",
      "init([]) ->",
      "\tAChild = #{id => 'AName',",
      "\t\tstart => {'AModule', start_link, []},",
      "\t\trestart => permanent,",
      "\t\tshutdown => 2000,",
      " \t\ttype => worker,",
      " \t\tmodules => ['AModule']},",
      "",
    "\t{ok, {#{strategy => one_for_one,",
    "\t\tintensity => 5,",
    "\t\tperiod => 30},",
    "\t\t[AChild]}",
    "\t}."
    ],
    "description": "Minimal supervisor snippet"
  }
}
